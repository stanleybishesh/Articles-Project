<div class="card mt-4">
  <div class="card-header">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group mt-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"form-control mt-2", autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field form-group mt-4">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, class:"form-control mt-2", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field form-group mt-4">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class:"form-control mt-2", autocomplete: "new-password" %>
    </div>

    <div class="field form-group mt-4">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, class:"form-control mt-2", autocomplete: "current-password" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "Update", class:"btn btn-success mb-4" %>
    </div>
  <% end %>
  </div>
</div>

<br/>
<br/>

<div class="card">
  <div class="card-header">
      <h3>Cancel my account</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title">Unhappy?</h5>
    <p class="card-text">
      <%= button_to "Cancel my account", registration_path(resource_name), class:"btn btn-danger mt-2", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
    </p>
  </div>
</div>

<br/>
<%= link_to "Back", :back, class:"btn btn-secondary mb-2" %>
