<%= stylesheet_link_tag 'login.css' %>

<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h2>Log in</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group mt-4">
        <%= f.label :organization %><br />
        <select name="organization_id" class="form-control mt-2">
          <% @organizations.each do |org|%>
              <option value=<%= org.id %>><%= org.name %> </option>
          <% end %>
        </select>
      </div>

      <div class="field form-group mt-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, name:"email", class:"form-control mt-2", autofocus: true, autocomplete: "email" %>
      </div>
      <br/>

      <div class="field form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password,name:"password", class:"form-control mt-2", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-group">
          <%= f.check_box :remember_me, class:"form-check-input mt-3" %>
          <%= f.label :remember_me, class:"mt-3" %>
        </div>
        <br/>

      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
  <br/>

  <div class="btns">
    <%= render "devise/shared/links" %>
  </div>
</div>