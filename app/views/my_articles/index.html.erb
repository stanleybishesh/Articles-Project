<%= stylesheet_link_tag 'index.css' %>

<div class="container">
    <h1>My Articles</h1>
    <% @articles.each do |article| %>
        <% unless article.archived? %>

            <div class="card mb-3">
                <%= image_tag 'blank.jpg', class:"image" %>
                <div class="card-body">
                    <h5 class="card-title"><%= article.title %></h5>
                    <p class="card-text"><%= article.body %></p>
                    <%= link_to 'Show', article, class:"btn btn-primary" %>
                </div>
            </div>
            <br/>
        <% end %>
    <% end %>
    <br/>
    <%= link_to 'Add New Article', new_article_path, class:"btn btn-success" %>
</div>