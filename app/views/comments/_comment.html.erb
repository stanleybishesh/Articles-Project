<% unless comment.archived? %>
    <div class="card mt-4 mb-4">
    <div class="card-body">
        <h5 class="card-title"><%= comment.commenter %></h5>
        <h6 class="card-subtitle mb-2 text-muted">5mins ago</h6>
        <p class="card-text"><%= comment.body %></p>
        <%= link_to 'Delete Comment', [comment.article, comment],
            data:{
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to delete this comment?"
            },class:"btn btn-outline-danger" %>
    </div>
    </div>
<% end %>

